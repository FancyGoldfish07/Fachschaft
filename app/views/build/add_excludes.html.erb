
<% provide(:title,"Termine ausschliessen") %>
  <%= bootstrap_form_for @recurrence, url: wizard_path do |f| %>
    <%= f.alert_message "Bitte die Fehler unten beheben." %>
      <p>Vom <%= pretty_date @recurrence.start %> bis zum <%= pretty_date @recurrence.end %> findet  <%= @recurrence.events.first.title %> an folgenden Tagen statt.</p>




      <%= f.collection_select :exclude_ids, @recurrence.getDatesStartFinish, :to_s, :to_s, {selected: @recurrence.excludes,
                                                                                            label: "Tage, an denen das Event nicht stattfindet"}, multiple: true, include_hidden: false %>
      <%= render partial: 'wizardControls', locals:{f: f} %>
  <% end %>
