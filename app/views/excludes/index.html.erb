<p id="notice"><%= notice %></p>

<h1>Listing Excludes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @excludes.each do |exclude| %>
      <tr>
        <td><%= exclude.date %></td>
        <td><%= link_to 'Show', exclude %></td>
        <td><%= link_to 'Edit', edit_exclude_path(exclude) %></td>
        <td><%= link_to 'Destroy', exclude, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

