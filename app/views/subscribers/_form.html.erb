<%= form_for(@subscriber) do |f| %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_area :email, :class => 'form-control'%>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_area :name, :class => 'form-control'%>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>



<% end %>
