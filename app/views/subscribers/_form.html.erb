<%= bootstrap_form_for(@subscriber) do |f| %>

    <div class="field">
      <%= f.email_field :email, :class => 'form-control', :label => 'E-Mail' %>
    </div>

    <div class="field">
      <%= f.text_field :name, :class => 'form-control', :label => 'Name'%>
    </div>

  <div class="form-actions">
    <%= f.submit "Anmelden" %>
  </div>



<% end %>
