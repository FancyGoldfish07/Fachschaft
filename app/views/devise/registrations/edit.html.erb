<div class="page-forgot">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= devise_error_messages! %>

      <div class="signin-header">
        <section class="logo text-center">
          <h1><a href="#/">Password ändern</a></h1>
        </section>
      </div>

      <div class="form-container">
        <div class="form-container text-center">
          <div class="form-group">
            <div class="input-group input-group-first">
                        <span class="input-group-addon">
                            <span class="ti-email"></span>
                        </span>
              <div class="field">
                <%= f.email_field :email, autofocus: true, :class => "form-control input-lg", placeholder: "E-Mail" %>
              </div>
            </div>
          </div>


          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Warte auf Bestätigung für: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group">
            <div class="input-group input-group-first">
          <span class="input-group-addon">
                            <span class="ti-lock"></span>
                        </span>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg", placeholder: "Neues Passwort" %>
              </div>
            </div>
          </div>


          <div class="form-group">
            <div class="input-group input-group-first">
            <span class="input-group-addon">
            <span class="ti-lock"></span>
          </span>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-lg", placeholder: "Passwort bestätigen" %>
                <br>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="input-group input-group-first">
            <span class="input-group-addon">
            <span class="ti-lock"></span>
          </span>
              <div class="field">
                <%= f.password_field :current_password, autocomplete: "off", :class => "form-control input-lg", placeholder: "Aktuelles Passwort" %>
              </div>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Update", :class => "btn btn-lg btn-block btn-primary" %>
          </div>
      
  <% end %>


  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Meinen Account löschen", registration_path(resource_name), data: {confirm: "Bist du dir sicher?"}, method: :delete %></p>

  <%= link_to "Zurück", :back %>

  </div></div></div>