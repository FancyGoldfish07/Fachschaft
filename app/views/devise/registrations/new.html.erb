<div class="body-wide body-auth">
  <div id="content">
<div class="page-signup">


  <div class="signin-header">
    <section class="logo text-center">
      <h1>Registrieren</h1>
    </section>
  </div>
  <div class="signup-body">
    <div class="container">
      <div class="form-container">

        <section>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal text-center"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
<div class="input-group">
 <span class="input-group-addon">
                                    <span class="ti-email"></span>
                                </span>
    <%= f.email_field :email, autofocus: true,:class => "form-control input-lg" %>
  </div>
  </div>

              <div class="form-group">
                <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="ti-lock"></span>
                                </span>

    <%= f.password_field :password, autocomplete: "off",:class => "form-control input-lg" %>
                  <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>
                </div>

              <div class="form-group">
                <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="ti-lock"></span>
                                </span>

    <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control input-lg" %>
                  <%= f.label :password_confirmation %><br />
  </div>
                </div>

  <div class="actions">
    <div class="divider divider-lg"></div>
    <div class="form-group">
      <p class="additional-info text-small">By clicking on sign up, you agree to <a href="javascript:;">terms & conditions</a> and <a href="javascript:;">privacy policy</a></p>
      <div class="divider"></div>
    <%= f.submit "Sign up", :class => "btn btn-primary btn-block btn-lg" %>
      </div>
  </div>
<% end %>
</section>
        <div class="divder"></div>
        <section class="additional-info">
<%= render "devise/shared/links" %>
        </section>

      </div>
    </div>
  </div>
</div>
  </div>
</div>