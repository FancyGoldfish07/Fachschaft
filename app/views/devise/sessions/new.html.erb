<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="page-signin">

  <div class="signin-header">
    <section class="logo text-center">
      <h1><a href="#/">Anmelden</a></h1>
    </section>
  </div>

  <div class="signin-body">
    <div class="container">
      <div class="form-container">

        <form class="form-horizontal">
          <fieldset>
            <div class="form-group">
              <div class="input-group input-group-first">
                                <span class="input-group-addon">
                                    <span class="ti-email"></span>
                                </span>

                <%= f.email_field :email, autofocus: true, :class => "form-control input-lg" %>

              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="ti-lock"></span>
                                </span>
                <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg" %>
              </div>
            </div>

            <div class="divider divider-xl"></div>
            <div class="form-group">
              <a href="#/" class="btn btn-primary btn-lg btn-block text-center">Log in</a>
            </div>
          </fieldset>
        </form>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
<% end %>

<%= render "devise/shared/links" %>

        <div class="divider"></div>

        <section class="additional-info">
          <p class="text-right">
            <a href="#/page/forgot-password">Forgot your password?</a>
            <span> | </span>
            <a href="#/page/signup">Sign up</a>
          </p>
        </section>

      </div>
    </div>
  </div>

</div>