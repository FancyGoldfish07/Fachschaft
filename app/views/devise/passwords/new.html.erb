  <%= devise_error_messages! %>


<div class="page-forgot">

  <div class="signin-header">
    <section class="logo text-center">
      <h1><a href="#/">Password-Reset</a></h1>
    </section>
  </div>

  <div class="form-container">

    <div class="additional-info text-center">
      <p class="text-small">Enter your email address that you used to register. We'll send you an email with your username and a link to reset your password.</p>
    </div>

    <div class="form-container text-center">

      <form class="form-horizontal" name="forgotPasswordForm">
        <div class="form-group">
          <div class="input-group input-group-first">
                        <span class="input-group-addon">
                            <span class="ti-email"></span>
                        </span>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
        </div>

        <div class="divider divider-lg"></div>
        <div class="form-group">
          <div class="actions">

        </div>
          <%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-block btn-primary" %></a>
        </div>
        <%= render "devise/shared/links" %>
      </form>

  </div>
</div>
<% end %>
