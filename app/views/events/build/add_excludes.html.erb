<div class="panel-heading">
  <h3>Termine</h3>
</div>
<div class="panel-body">
  <%= simple_form_for @recurrence, url: wizard_path do |f| %>
      <%= f.error_notification %>
      <% dates = @recurrence.getDatesStartFinish %>
<% dates.each do |date| %>
         <p><%= date %></p>
          <%end %>
      <%= f.input :exclude_ids, label: "Tage", collection: dates.each_with_index.map {|name, index| [name,index]} %>
      <div class="actions">
        <%= f.submit "Continue" %>
      </div>
  <% end %>
</div>